@{
    Layout = "~/Views/Shared/MainPage.cshtml";
}

<body id="page-top">

    <!-- Header -->
    <header class="masthead">
        <div class="container d-flex h-100 w-100 align-items-center">
            <div class="mx-auto text-center">
                <h1 class="mx-auto my-0 text-uppercase">The Local</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">Connecting users to their local community, one hidden spot at a time.</h2>
                <a  asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary js-scroll-trigger">Become A Local</a>
            </div>
        </div>
    </header>

    <!-- About Section -->
    <section id="about" class="about-section text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2 class="text-white mb-4">Built with Google Maps API</h2>
                    <p class="text-white-50">
                        The Local uses the most widely used map service to connect users to locations around them.
                        By using Google Maps API, users are presented with a familiar experience, so that you can spend more time discovering
                        the world around you, and connect with new and interesting individuals.
                    </p>
                </div>
            </div>
            <img src="img/googleMapsLogo.png" class="img-fluid mb-lg-5 mb-5" alt="" id="googleMapsLogo">
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="projects-section bg-light">
        <div class="container">

            <!-- Featured Project Row -->
            <div class="row justify-content-center no-gutters">
                <div class="col-lg-6">
                    <img class="img-fluid w-100" src="img/theOfficeCastAtBar.jpg" alt="">
                </div>
                <div class="col-lg-6 order-lg-first">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-right">
                                <h4 class="text-white">Meet new people</h4>
                                <p class="mb-0 text-white-50">Connect with new people in your area and make new friends!</p>
                                <hr class="d-none d-lg-block mb-0 mr-0">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Project One Row -->
            <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
                <div class="col-lg-6">
                    <img class="img-fluid" src="img/surfer.jpg" alt="">
                </div>
                <div class="col-lg-6">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-left">
                                <h4 class="text-white">Discover Local Spots</h4>
                                <p class="mb-0 text-white-50">Explore local spots to enjoy your favorite activities.</p>
                                <hr class="d-none d-lg-block mb-0 ml-0">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Project Two Row -->
            <div class="row justify-content-center no-gutters">
                <div class="col-lg-6">
                    <img class="img-fluid w-100" src="img/googleMapsJax.png" alt="">
                </div>
                <div class="col-lg-6 order-lg-first">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-right">
                                <h4 class="text-white">Create Your Custom Map</h4>
                                <p class="mb-0 text-white-50">Create a custom map of your favorite spots!</p>
                                <hr class="d-none d-lg-block mb-0 mr-0">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Signup Section -->
    <section id="signup" class="signup-section">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-lg-8 mx-auto text-center">
                    <form>
                        <i class="fa fa-user-plus fa-2x mb-2 text-white"></i>
                        <h2 class="text-white mb-3">Ready to get started?</h2>
                        <button type="submit" class="btn btn-primary mx-auto">Signup</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section bg-black">
        <h2 class="text-white text-center mb-2">
            Check out my other work
        </h2>
        <div class="container">
            <div class="social d-flex justify-content-center">
                <a href="#" class="mx-2">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="#" class="mx-2">
                    <i class="fab fa-github"></i>
                </a>
                <a href="#" class="mx-2">
                    <i class="fab fa-free-code-camp"></i>
                </a>
                <a href="#" class="mx-2">
                    <i class="fab fa-codepen"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/js/grayscale.min.js"></script>

</body>

